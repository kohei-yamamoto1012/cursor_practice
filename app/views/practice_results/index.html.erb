<h1 class="mt-5">ランキング</h1>

<div class="mt-3">
  <table class="table table-hover">
    <thead class="thead-default">
      <tr>
        <th>順位</th>
        <th>名前</th>
        <th>スコア</th>
      </tr>
    </thead>

    <tbody>
      <% @practice_results.each.with_index(1) do |practice_result, rank| %>
        <tr>
          <td><%= rank %></td>
          <td><%= practice_result.name %></td>
          <td><%= practice_result.score %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>

<div class="nav justify-content-center mb-3">
  <%= link_to "戻る", root_path, class: "nav-link back-link" %>
</div>
